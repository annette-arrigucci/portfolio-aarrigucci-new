@model IEnumerable<portfolio_annette_arrigucci.Models.Comment>

<div id="show-comments">
    <h3>Comments</h3>
    @foreach (var item in Model)
    {
        <p>@Html.Raw(item.Body)</p>
        if(!string.IsNullOrEmpty(item.AuthorId)) {
            <p><b>Posted by @item.Author.FirstName&nbsp;@item.Author.LastName</b></p>
        }
        <p class="date"><b>@TimeZoneInfo.ConvertTime(item.Created, TimeZoneInfo.FindSystemTimeZoneById("Eastern Standard Time")).ToString("M/dd/yy h:mm tt")</b></p>
        <br /><br />    
    }
</div>
        
