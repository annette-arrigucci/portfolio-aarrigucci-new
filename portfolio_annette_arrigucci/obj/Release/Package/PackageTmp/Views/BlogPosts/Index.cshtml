@model IEnumerable<portfolio_annette_arrigucci.Models.BlogPost>

@{
    ViewBag.Title = "Index";
}

<section id="blog-index">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center page-start">
                <h2>Blog</h2>
                <hr class="star-primary">
            </div>
        </div>

        

        <div class="row">
            <div class="col-lg-8 col-lg-offset-1">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>

                @foreach (var item in Model)
                {
                    <h3><a href="@Url.Action("Details", new { id = item.Id })" class="blog-link">@Html.DisplayFor(modelItem => item.Title)</a></h3>
                    if(!string.IsNullOrEmpty(item.MediaURL)) {
                        <img src="@Html.DisplayFor(modelItem => item.MediaURL)" width="100">
                    }
                    <p>@Html.Raw(item.Slug)</p>
                    @*<p>@Html.DisplayFor(modelItem => item.Slug)</p>*@
                    @*<p><b>@Html.DisplayFor(modelItem => item.Created)</b></p>*@
                    <p class="date"><b>@TimeZoneInfo.ConvertTime(item.Created, TimeZoneInfo.FindSystemTimeZoneById("Eastern Standard Time")).ToString()</b></p>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </p>
                }

